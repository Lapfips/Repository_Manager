#!/bin/bash

github="git@github.com:"
repositories=( )

if [[ "$1" == "auto" ]]; then
    auto="auto"
fi

if [[ -z "$1" ]]; then
    for repo in "${repositories[@]}"; do
        echo "Updating $repo"
        bash Repository_Manager/src/.Update/.Update_Repo "$repo" "$github" "$auto"
    done
else
    for repo in "${repositories[@]}"; do
        echo $(basename $repo)
        echo $1
        if [[ $(basename $repo) == "$1" ]]; then
            auto="$2"
            echo "Updating $repo"
            bash Repository_Manager/src/.Update/.Update_Repo "$repo" "$github" "$auto"
        fi
    done
fi
