#!/bin/bash

github="git@github.com:"
repositories=( )

if [[ "$1" == "auto" ]]; then
    commit="auto"
    echo "Updating $repo"
    bash Repository_Manager/src/.Update/.Update_Repo "$repo" "$github" "$commit"
fi

if [[ -z "$1" ]]; then
    for repo in "${repositories[@]}"; do
        echo "Updating $repo"
        bash Repository_Manager/src/.Update/.Update_Repo "$repo" "$github" "$commit"
    done
else
    for repo in "${repositories[@]}"; do
        if [[ $(basename $repo) == "$1" ]]; then
            commit="$2"
            echo "Updating $repo"
            bash Repository_Manager/src/.Update/.Update_Repo "$repo" "$github" "$commit"
        fi
    done
fi
