#!/bin/bash

if [[ "$1" = "-help" ]]; then
    echo -e "\nUsage prog -cat -rm <category_name> <repository_name>"
else
    if [[ "$#" -lt 1 ]]; then
        echo -e "\nPlease enter the following information(s): \n"
        [ -z "$1" ] && read -p "Enter the category name: " CAT
    else
        CAT="$1"
    fi
fi

if [[ ! -f "Repository_Mangager/src/.Update_Repositories/.Update_$CAT" ]]; then
    echo -e "\nError: The file for category '$CAT' does not exist."
    exit 1
else
    rm "Repository_Mangager/src/.Update_Repositories/.Update_$CAT"
fi